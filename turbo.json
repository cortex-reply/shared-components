{
  "extends": ["//"],
  "globalDependencies": ["**/.env", "**/.env.local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "lib/**"],
      "cache": false
    },
    "type-check": {
      "outputs": [],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
