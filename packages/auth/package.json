  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "next": "^15.5.9",
    "next-auth": "5.0.0-beta.30",
    "payload": "^3.70.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.3"
